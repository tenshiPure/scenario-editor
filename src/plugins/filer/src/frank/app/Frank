" vim:set ft=vim:

python <<EOM

import vim
import os
import os.path

class Frank:

	def __init__(self, root):
		Num.init()
		root = Path(root)
		self.node = Directory(root, root)
		self.buffer = Buffer2()

	def output(self):
		self.buffer.output(self.node.getOutputs([]))

	def _getCursorLineNum(self):
		return int(vim.eval('getpos(".")')[1])

	def findByCursor(self):
		n = self._getCursorLineNum()

		for i, e in enumerate(self.node):
			if i == n:
				return e

EOM
