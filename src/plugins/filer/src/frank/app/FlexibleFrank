" vim:set ft=vim:

function! FlexibleFrank()
python <<EOM

import vim

root = vim.eval('$devroot')
frank = Frank(root)
frank.output()

EOM
endfunction

function! ActionEnter()
python <<EOM
entry = frank.findByCursor()

vim.command('execute "wincmd w"')
vim.command(':edit %s' % entry.path.value)
EOM
endfunction

function! ActionReload()
python <<EOM
root = vim.eval('$devroot')
frank = Frank(root)
frank.output()
EOM
endfunction

